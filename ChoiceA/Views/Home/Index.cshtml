@model IEnumerable<ChoiceA.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Student's List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    <a class="btn btn-primary" asp-route-studentId="@item.Id" asp-area="" asp-controller="StudDiscs" asp-action="Index">Disciplines</a>
                </td>
            </tr>
        }
    </tbody>
</table>
